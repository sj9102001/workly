# Frontend API Base URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# Backend Database Configuration
# If these are set, they will be used instead of the docker postgres database
# Leave them unset to use the docker postgres database
# DB_URL=jdbc:postgresql://your-host:5432/your-database
# DB_USERNAME=your-username
# DB_PASSWORD=your-password
# DB_SHOW_SQL=false

# Backend JWT Configuration
JWT_SECRET=CHANGE_ME_TO_A_LONG_RANDOM_SECRET_AT_LEAST_32_CHARS
JWT_ACCESS_MINUTES=15
JWT_REFRESH_DAYS=14

# Backend Cookie Configuration
COOKIE_SECURE=false
COOKIE_SAME_SITE=Strict

# Backend Invite Configuration
INVITE_DAYS=7
